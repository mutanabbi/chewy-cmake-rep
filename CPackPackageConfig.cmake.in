include(${CMAKE_BINARY_DIR}/CPackCommonPackageOptions.cmake)

set(CPACK_GENERATOR ${CPACK_GENERATOR})
set(CPACK_SOURCE_GENERATOR ${CPACK_SOURCE_GENERATOR})
set(CPACK_CMAKE_GENERATOR "${CMAKE_GENERATOR}")

set(CPACK_INSTALL_CMAKE_PROJECTS "${CMAKE_BINARY_DIR};${PACKAGE_NAME};${PACKAGE_NAME};/")

set(CPACK_PACKAGE_NAME ${PACKAGE_NAME})
set(CPACK_PACKAGE_VERSION ${CPACK_PACKAGE_VERSION})
set(CPACK_PACKAGE_DESCRIPTION "${CPACK_PACKAGE_DESCRIPTION}")
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "${CPACK_PACKAGE_DESCRIPTION_SUMMARY}")
set(CPACK_SET_DESTDIR "ON")

# Debian specifics
set(CPACK_DEBIAN_PACKAGE_DEPENDS "${CPACK_DEBIAN_PACKAGE_DEPENDS}")
set(CPACK_DEBIAN_PACKAGE_REPLACES "${CPACK_DEBIAN_PACKAGE_REPLACES}")
set(CPACK_DEBIAN_PACKAGE_HOMEPAGE "${CPACK_DEBIAN_PACKAGE_HOMEPAGE}")
set(CPACK_DEBIAN_PACKAGE_CONTROL_EXTRA "${CPACK_DEBIAN_PACKAGE_CONTROL_EXTRA}")

configure_file(
    ${_ADD_PACKAGE_MODULE_BASE_DIR}/CPackProjectConfig.cmake.in
    ${CMAKE_BINARY_DIR}/CPackProjectConfig.cmake
    @ONLY
  )
# NOTE This file will be automaticaly included during CPack run
set(CPACK_PROJECT_CONFIG_FILE ${CMAKE_BINARY_DIR}/CPackProjectConfig.cmake)

